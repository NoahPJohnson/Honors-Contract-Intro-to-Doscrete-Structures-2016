package BplusTree;

import java.util.Scanner;

/**
 *
 * @author Noah
 */

public class BplusTree
{
    private int index;
    private int e;
    
    Node Root = new Node(true);
    
    public BplusTree()
    {
        
    }        
            
    public void elementInsert()
    {
     Scanner s = new Scanner(System.in);
     e = s.nextInt();
     if (Root.itemSearch(e) == false)
        { 
         Root.setKey(e);
        }
     
     if (Root.getKeyList().size() == Root.getN())
        {
         Root.split();   
        } 
    }       
    
    public void Remove()
    {
        
    }               

    public void traverse()
    {
        
    }   
    
    public void search()
    {
        
    }        
    
    public String toString()
    {
     String result = "";
     result += Root.toString();
     result += "\n";
     for (int i = 0; i < Root.getChildCount(); i ++)
         {
          result += Root.getChild(i).toString();
          result += "->";
         }
     result += "\n";
     return result;
    }      
}
