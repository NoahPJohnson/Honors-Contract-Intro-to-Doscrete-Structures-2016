package BplusTree;

import java.util.Scanner;

/**
 *
 * @author Noah
 */

public class BplusTree
{
    private int index;
    private int e;
    
    Node Root = new Node(true);
    Node target;
    public BplusTree()
    {
        
    }        
            
    public void elementInsert()
    {
     Scanner s = new Scanner(System.in);
     e = s.nextInt();
     target = search(e);
     target.setKey(e); 
    }       
    
    public void Remove()
    {
        
    }               

    public void traverse()
    {
        
    }   
    
    public Node search(int e)
    {
     int ind;
     target = Root;
     if (target.itemSearch(e) == false)
        { 
         while (target.getChildCount() != 0)
               { 
                ind = 0;
                System.out.println("check");
                while(ind < target.getKeyList().size())
                     {
                      if (e < target.getKey(ind))
                         {
                          target = target.getChild(ind);
                          break;
                         }
                      else if (e > target.getKey(target.getN()))
                         {
                          target = target.getChild(target.getChildCount());
                          break;
                         } 
                      ind ++;
                     }  
               }
           }
     return target;
    }
  
    public String toString()
    {
     String result = "";
     result += Root.toString();
     result += "\n";
     for (int i = 0; i < Root.getChildCount(); i ++)
         {
          result += Root.getChild(i).toString();
          result += "->";
         }
     result += "\n";
     return result;
    }      
}
